{
  "expo": {
    "name": "RenoveJá+",
    "slug": "renoveja",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "renoveja",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.renoveja.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Permitir acesso à câmera para enviar fotos de receitas e documentos.",
        "NSPhotoLibraryUsageDescription": "Permitir acesso às fotos para enviar imagens de receitas.",
        "NSLocationWhenInUseUsageDescription": "Permitir acesso à localização para encontrar farmácias próximas.",
        "NSMicrophoneUsageDescription": "Permitir acesso ao microfone para teleconsultas."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#00B4CD"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.renoveja.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "RenoveJá+ Telemedicina",
      "shortName": "RenoveJá+",
      "description": "Plataforma de telemedicina - Receitas, Exames e Consultas Online",
      "lang": "pt-BR",
      "themeColor": "#00B4CD",
      "backgroundColor": "#F8FAFB",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "scope": "/"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#00B4CD"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir acesso à localização para encontrar farmácias próximas."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir acesso à câmera para enviar fotos de receitas."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "renoveja-app"
      }
    },
    "owner": "uchihafelip"
  }
}
